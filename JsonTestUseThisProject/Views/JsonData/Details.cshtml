@using JsonTestUseThisProject.Models
@model IEnumerable<JsonTestUseThisProject.Models.JsonData>

@{
    ViewData["Title"] = "Details";
}

<h1>View All</h1>

@foreach (var item in @Model)
{
    <p>
        @item.id
        @item.actualPos
        @item.status
    </p>

    @if (item.status == 2)
    {
        <style>
            .box {
                width: 100px;
                height: 100px;
                border: 5px black;
                background-color: green;
            }
        </style>
    }

    else if (item.status == 1)
    {
        <style>
            .box {
                width: 100px;
                height: 100px;
                border: 5px black;
                background-color: red;
            }
        </style>
    }



}

<div class="box">
    <h1>Tank exempel</h1>
</div>


<h1>Update status</h1>
@using (Html.BeginForm("Details", "JsonData", FormMethod.Post))
{
    JsonTestUseThisProject.Models.JsonData jsonData = new JsonTestUseThisProject.Models.JsonData();

    <label asp-for="@jsonData.status">Set new status</label>
    <br />
    <input type="text" asp-for="@jsonData.status" name="status" />
    <br />
    <button type="submit">Add/Update</button>
}



